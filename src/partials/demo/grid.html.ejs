				<%- buildGrid(["eleven no-gutter", "one no-gutter"]) %>
				<%- buildGrid(["twelve no-gutter"]) %>
			</div>
			<div class="grid-slide">
				<div class="six block">
					<p>Default behavior on mobile</p>
					<iframe id='mobile-one'></iframe>
					<div style="display:none;" id="iframe-mobile-one-content">
						<div class="grid-example">
							<%- buildGrid(["one", "two", "three", "four", "five", "six", "seven", "eight", "nine", "ten", "eleven", "twelve"]) %>
						</div>
					</div>
				</div>
				<div class="six block">
					<p>with mobile class</p>
					<iframe id='mobile-two'></iframe>
					<div style="display:none;" id="iframe-mobile-two-content">
						<div class="grid-example">
							<%- buildGrid(["mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one", "mobile-one"]) %>
							<%- buildGrid(["mobile-two", "mobile-two", "mobile-two", "mobile-two", "mobile-two", "mobile-two"]) %>
							<%- buildGrid(["mobile-three", "mobile-three", "mobile-three", "mobile-three"]) %>
							<%- buildGrid(["mobile-four", "mobile-four", "mobile-four"]) %>
